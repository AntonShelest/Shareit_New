@model IEnumerable<FancyImageUploader.Models.FolderModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            FolderName
        </th>
        <th>
            FolderUserId
        </th>
        <th>
            SupFolderId
        </th>
        <th>
            FolderRights
        </th>
        <th>
            FolderLink
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FolderName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FolderUserId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SupFolderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FolderRights)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FolderLink)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FolderId }) |
            @Html.ActionLink("Details", "Details", new { id=item.FolderId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FolderId })
        </td>
    </tr>
}

</table>
